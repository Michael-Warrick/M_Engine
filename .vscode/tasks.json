{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "g++",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "osx": {
                "args": [
                    "-g",
                    "--std=c++11",
                    "code/main.cpp",
                    "-o",
                    "builds/mac/M_Engine"
                ]
            },
            "windows": {
                "args": [
                    "-g",
                    "--std=c++11",
                    "code/main.cpp",
                    "-o",
                    "builds/windows/M_Engine"
                ]
            },
            "linux": {
                "args": [
                    "-g",
                    "--std=c++11",
                    "code/main.cpp",
                    "-o",
                    "builds/linux/M_Engine"
                ]
            },
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}